-if @kitchen.errors.any?
  #error_explanation
    %h2= "#{pluralize(@kitchen.errors.count, "error")} prohibited this desc_place from being saved:"
    %ul
      - @kitchen.errors.full_messages.each do |msg|
        %li= msg

= form_for @kitchen, :url => @kitchen.id!=nil ? desc_city_path(@kitchen.id) : desc_kitchens_path, :html => {:class => "form-horizontal"} do |f|
  %fieldset
    .control-group
      %label.control-label ID
      .controls
        %p= @kitchen.id!=nil ? @kitchen.id : "new"
    .control-group
      %label.control-label Активность
      .controls
        = f.check_box :active, :checked => @kitchen.id==nil ? true : @kitchen.active ? true : false
    .control-group
      %label.control-label Название
      .controls= f.text_field :name, :class=>'span5'

  .form-actions
    = link_to 'Отмена', desc_kitchens_path, :class => "btn btn-large"
    = f.submit 'Сохранить', :class => "btn btn-success btn-large"