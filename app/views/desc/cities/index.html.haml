= render "settings_tabs"
.btn-toolbar#model-bar{:data => {:code => "City"}}
  .btn-group
    = link_to '<i class="icon-plus icon-white"></i> Новый город'.html_safe, new_desc_city_path, :class => "btn btn-success"
  .btn-group
    %button.btn.disabled Выделенные:
    %button.btn#activate-selected
      %i.icon-ok
      Активировать
    %button.btn#deactivate-selected
      %i.icon-remove
      Деактивировать
    %button.btn.btn-danger#remove-selected
      %i.icon-minus.icon-white
      Удалить
.clear
%br

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th
        .btn-group
          .btn#button-select-all
            %i.icon-check
          .btn.btn-small.dropdown-toggle{:data => {:toggle => "dropdown"}}
            /%input{:type => "checkbox"}
            %span.caret
          %ul.dropdown-menu
            %li
              %a#select-all{:href => "javascript:;"} Выделить все
            %li
              %a#select-none{:href => "javascript:;"} Снять выделения
            %li
              %a#select-rnd{:href => "javascript:;"} Выделить случайно
            %li
              %a#select-inv{:href => "javascript:;"} Инвертировать выделение
      %th
        .btn.disabled
          Меню
      %th
        %a.btn{:href => params[:d] == "desc" ? "?f=id&d=asc" : "?f=id&d=desc"}
          ID
          - if params[:f] == "id" || !params[:f]
            - if params[:d] == "desc"
              %i.icon-chevron-up
            - else
              %i.icon-chevron-down
      %th
        %a.btn{:href => params[:d] == "desc" ? "?f=name&d=asc" : "?f=name&d=desc"}
          Название
          - if params[:f] == "name"
            - if params[:d] == "desc"
              %i.icon-chevron-up
            - else
              %i.icon-chevron-down
      %th
        %a.btn{:href => params[:d] == "desc" ? "?f=active&d=asc" : "?f=active&d=desc"}
          Активность
          - if params[:f] == "active"
            - if params[:d] == "desc"
              %i.icon-chevron-up
            - else
              %i.icon-chevron-down
      %th
        %a.btn{:href => params[:d] == "desc" ? "?f=created_at&d=asc" : "?f=created_at&d=desc"}
          Создан
          - if params[:f] == "created_at"
            - if params[:d] == "desc"
              %i.icon-chevron-up
            - else
              %i.icon-chevron-down
      %th
        %a.btn{:href => params[:d] == "desc" ? "?f=updated_at&d=asc" : "?f=updated_at&d=desc"}
          Изменен
          - if params[:f] == "updated_at"
            - if params[:d] == "desc"
              %i.icon-chevron-up
            - else
              %i.icon-chevron-down
  %tbody
  - @cities.each do |city|
    %tr
      %td.small
        %input.select-box{:type => "checkbox", :data => {:id => city.id}}
      %td.small
        .btn-group
          %button.btn.btn-small.dropdown-toggle{:data => {:toggle => "dropdown"}}
            %i.icon-list
            %span.caret
          %ul.dropdown-menu
            %li= link_to '<i class="icon-flag"></i> Районы'.html_safe, desc_city_regions_path(city.id)
            %li= link_to '<i class="icon-random"></i> Метро'.html_safe, desc_city_metros_path(city.id)
            %li.divider
            %li= link_to '<i class="icon-pencil"></i> Редактировать'.html_safe, edit_desc_city_path(city.id)
            %li= link_to '<i class="icon-remove"></i> Удалить'.html_safe, desc_city_path(city.id), :confirm => 'Вы уверены?', :method => :delete
      %td= city.id
      %td= city.name
      %td= city.active==1 ? '<span style="color:green;">Да</span>'.html_safe : '<span style="color:red;">Нет</span>'.html_safe
      %td= city.created_at.localtime().strftime('%D %H:%M:%S')
      %td= city.updated_at.localtime().strftime('%D %H:%M:%S')
